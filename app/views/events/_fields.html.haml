- content_for :header do
  = javascript_include_tag 'http://maps.google.com/maps?file=api&amp;v=2&amp;key=' + google_maps_key + '&dummy=xxxx', 'geocode', 'tiny_mce/tiny_mce' 
  = javascript_include_tag 'language_tabs'
  %script{ :language=>'javascript'}
    i18n_all_languages = new Array( 
    = "'" + I18N_ALL_LANGUAGES * "', '" + "'"
    );



%p
  = f.error_messages


%h2= t(".meeting_place")

%p
  %a{:name => 'addressAnchor'}
  = f.label :address, t(".venue.field.address")
  = f.text_field :address, :size=>60
  %span{:id => 'addressDialogue', :style => 'display:none'} 

%p
  = f.label :startdate, t(".venue.field.startdate")
  = datetime_select :event, :startdate 

%h2= t(".title")


-#
-# die tabs
-#
%div{:class => 'tabbed_languages'}
  %div{:class=> 'tabs'}
    %div{:style => 'float:left; margin-right:16px;'}
      Sprache wÃ¤hlen:
    - @languages.each do |lang|
      - css_class = lang==@current_language ? 'tab_active' : 'tab_inactive'
      %div{:class=>css_class, :id=>'language_tab_' + lang, :onClick=>"switch_language_tab('"+lang+"')"}
        %img{ :src=> '/images/flags/' + lang + '.gif', :alt=>lang, :title=>lang}
          
  %div{ :class=>'content' }

    %p
      = f.label :tag_list, t(".name.field.themes")
      = f.text_field :tag_list, :size=>60, :autocomplete => "off"
      #event_tag_list_auto_complete.auto_complete{:style=>'display:none'}
    %p= t(".name.theme_hint")

-#
-# die inhalts-container (translations)
-#
- @event.globalize_translations.each do |translation|
  - css_style = translation.locale.to_s == @current_language ? '' : 'display:none' 
  %div{ :style=>css_style, :id=>'translation_container_' + translation.locale.to_s}
    = render :partial => 'translation', :object=>translation
  
